<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.nhn.blind.repository.RoleDao">
	<insert id="add">
		INSERT INTO user_role(email)
		values (#{email})
	</insert>

	<delete id="delete">
		DELETE FROM user_role WHERE email=#{email}
	</delete>
	
	<update id="update">
		UPDATE user_role SET email=#{email}
					WHERE id=#{id}
	</update>
	
	<select id="getByEmail" resultType="com.nhn.blind.model.Role">
		SELECT email, role FROM user_role WHERE email=#{email]
	</select>
</mapper>
