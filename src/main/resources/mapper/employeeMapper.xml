<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.nhn.school.dao.EmployeeDao">

	<select id="findAll" resultType="com.nhn.school.model.Employee">
		/* subjectDao.findAll */
		SELECT id, name, birth 
		FROM employee
	</select>
	
	<insert id="save">
		<choose>
			<when test="id != null and id != 0">
				INSERT INTO employee
				(id, name, birth)
				VALUES
				(#{id}, #{name}, #{birth})
				ON DUPLICATE KEY UPDATE name=#{name}, birth=#{birth}
			</when>
			<otherwise>
				INSERT INTO employee
				(name, birth)
				VALUES
				(#{name}, #{birth})
			</otherwise>
		</choose>
	</insert>
	
	<delete id="delete">
		DELETE FROM employee
		WHERE id=#{id}
	</delete>
</mapper>
