<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.nhn.school.dao.EmployeeDao">

	<select id="findAll" resultType="com.nhn.school.model.Employee">
		/* employeeDao.findAll */
		SELECT emp_id AS id 
		, emp_name AS name
		, emp_birth AS birth
		FROM employee
	</select>
	
	<insert id="save">
		<choose>
			<when test="id != null and id != 0">
				INSERT INTO employee
				(emp_id, emp_name, emp_birth)
				VALUES
				(#{id}, #{name}, #{birth})
				ON DUPLICATE KEY UPDATE emp_name=#{name}, emp_birth=#{birth}
			</when>
			<otherwise>
				INSERT INTO employee
				(emp_name, emp_birth)
				VALUES
				(#{name}, #{birth})
			</otherwise>
		</choose>
	</insert>
	
	<delete id="delete">
		DELETE FROM employee
		WHERE id=#{id}
	</delete>
	
	<select id="count" resultType="int">
		SELECT COUNT(emp_id)
		FROM employee
	</select>
</mapper>
