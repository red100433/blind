<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.nhn.blind.repository.CommentDao">

	<select id="getList" resultType="com.nhn.blind.model.Comment">
		SELECT boardId, userId, comment, date FROM comment
	</select>
	<select id="getBoardCommentById" resultType="com.nhn.blind.model.Comment">
		SELECT userId, comment, date FROM comment WHERE boardId=#{boardId}
	</select>

</mapper>
